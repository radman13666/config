#tmux aliases
alias tmux='tmux -2'
alias ta='tmux attach -t'
alias tnew='tmux new -s'
alias tl='tmux ls'
alias tkill='tmux kill-session -t'

#convenience aliases for editing config files
alias ev='vim ~/config/.vimrc'
alias et='vim ~/config/.tmux.conf'
alias ez='vim ~/config/.zshrc'
alias ezz='vim ~/config/zsh_custom/.zsh_aliases'

#others
alias ls='ls -pF'
alias la='ls -ApF'
alias lal='ls -AlhptF'
#alias rmd='rm -rf'
alias rrm='rm -r'
alias tar='tar xf'
alias targ='tar xzf'
alias off='systemctl poweroff'
alias rbt='systemctl reboot'
alias tree='tree -at --filelimit 30 '
